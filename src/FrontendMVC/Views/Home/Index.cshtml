@using FrontendMVC.ViewModels;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_FrontLayout";
}

@model UserViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>
                LocalBet helps you make bets with your friends.
            </h3>
            <img src="~/images/handshake-icon.png" width="100"/>
        </div>
        <div class="col-md-6">
            <form asp-controller="User" asp-action="Post" method="post">

                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="FirstName" class="control-label">First name</label>
                        <input asp-for="FirstName" type="text" id="FirstName" class="form-control"/>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="LastName" class="control-label">Last name</label>
                        <input asp-for="LastName" type="text" id="LastName" class="form-control"/>
                    </div>
                </div>
                <div class="row form-group">
                    <label for="RegisterUserName" class="control-label">User name</label>
                    <input asp-for="UserName" type="text" id="RegisterUserName" class="form-control"/>
                </div>
                <div class="row form-group">
                    <label for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="email" id="Email" class="form-control"/>
                </div>
                <div class="row form-group">
                    <label for="RegisterPassword1" class="control-label">Password</label>
                    <input asp-for="Password1" type="password" id="RegisterPassword1" class="form-control"/>
                </div>
                <div class="row form-group">
                    <label for="RegisterPassword2" class="control-label">Repeat password</label>
                    <input asp-for="Password1" type="password" id="RegisterPassword2" class="form-control"/>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary pull-right">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
