@using FrontendMVC.ViewModels;
@{
    ViewData["Title"] = "Home Page";
    Layout = "_FrontLayout";
}

@model UserViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>
                LocalBet helps you make bets with your friends.
            </h3>
            <img src="~/images/handshake-icon.png" width="100"/>
        </div>
        <div class="col-md-6">
            <form asp-controller="User" asp-action="Post" method="post">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label">First name</label>
                        <input asp-for="FirstName" type="text" value="@Model.FirstName" class="form-control"/>
                        <span asp-validation-for="FirstName" class="help-block"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label">Last name</label>
                        <input asp-for="LastName" type="text" value="@Model.LastName" class="form-control"/>
                        <span asp-validation-for="LastName" class="help-block"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label asp-for="UserName" class="control-label">User name</label>
                    <input asp-for="UserName" type="text" value="@Model.UserName" class="form-control"/>
                    <span asp-validation-for="UserName" class="help-block"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" type="email" value="@Model.Email" class="form-control"/>
                    <span asp-validation-for="Email" class="help-block"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Password1" class="control-label">Password</label>
                    <input asp-for="Password1" type="password" value="@Model.Password1" class="form-control"/>
                    <span asp-validation-for="Password1" class="help-block"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Password2" class="control-label">Repeat password</label>
                    <input asp-for="Password2" type="password" value="@Model.Password2" class="form-control"/>
                    <span asp-validation-for="Password2" class="help-block"></span>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary pull-right">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
