@model MVC.ViewModels.UserProfile


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>
                LocalBet helps you make bets with your friends.
            </h3>
        </div>
        <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group label-floating">
                            @Html.DisplayFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="form-group label-floating">
                            @Html.DisplayFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group label-floating">
                            @Html.DisplayFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group label-floating">
                            @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="/User/EditProfile" class="btn btn-primary pull-right">Edit</a>
                    </div>
                </div>
        </div>
    </div>
</div>
